@import url(../fonts/opensans/stylesheet.css);

*, body, .rui-theme-font {font-family:'Open Sans'} 

/* begin: layout,canvas style */
.centered-canvas { margin: 0 auto; width:930px; text-align: left; }
.master-background {background-color:#F1F1FF;} 
.master-layout { height: 100%; margin-top: 55px; }
.master-header { 
	background: url(../img/header-bg.png) repeat-x 0 0;
	color: #fff; position: fixed; 
	top: 0; left: 0; right: 0;
	height: 45px; z-index: 1000;
}
.master-header a { color: #fff; text-decoration: none; }
.master-logo { padding:5px; text-align:left; } 
.master-content { clear: both; }
.master-footer { clear: both; padding: 30px 0 10px 0; text-align: left; }
.master-footer .copyright { text-align: left; }
/* end: layout,canvas style */


/* begin: default theme styles */
.rui-theme-background, .rui-popupopener .rui-popupopener-body { background-color:#F1F1FF; }  
.rui-theme-header-background, .rui-popupopener .rui-theme-header-background  { 
	background: #5c774e; 
} 
.rui-theme-menubar-background {background-color:#808080;} 
/* end: default theme styles */


/* begin: navbar style */
.navbar td { padding:2px 15px; }
.navbar a {}
.navbar .selected {
	background-color: #6be325;
	border-radius: 4px;
	-moz-border-radius: 4px;
	-webkit-border-radius: 4px;
}
.navbar .selected a { color: #333; }
.navbar .gap { width:0; padding: 0; }
/* end: navbar style */

