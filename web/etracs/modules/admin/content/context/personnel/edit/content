<% 
   def UID = "PERSNL" + new java.rmi.server.UID(); 
%> 
 
<script src="/js/ext/datetime.js"></script>

<script>
	\$put( "${PAGE.context}", CRUDFactory.create( 
		new function() { 
			this.service = Service.lookup( "PersonnelService", "admin");
			
			this.oninit = function() { 
				if (this.mode == 'create') 
					this.entity =  { objid: '${UID}' }; 
				else if (this.mode == 'read') 
					this.read(); 
			} 
		} 
	));
</script>

<style>
#form { margin-left:20px; margin-top:20px; }
#datetime > div > select.m { margin-left:0; }
#gender { margin-left:0; }
</style>

